#!/bin/bash

sudo apt-get install -y vim libsqlite3-dev apache2 apache2-dev build-essential zlib1g-dev libssl-dev libreadline-dev libyaml-dev libcurl4-openssl-dev apache2 apache2-dev mysql
sudo apt-get install -y ruby ruby-dev
sudo apt-get install -y golang
sudo apt-get install -y passenger
sudo gem i nokogiri
sudo gem i rails

cd /var/www/
sudo chown ug html
cd html
git clone https://github.com/suzaku183/seasons
cd seasons
./first_deploy

cd
git clone https://github.com/suzaku183/vim
./vim/bundle

cd /etc/apache2
vim
